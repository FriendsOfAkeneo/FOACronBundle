<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="foa.cron_bundle.twig.extension" class="FOA\CronBundle\Twig\TwigExtension" public="false">
            <tag name="twig.extension"/>
            <argument>%kernel.logs_dir%</argument>
            <argument>%kernel.project_dir%</argument>
        </service>

        <service id="foa.cron_bundle.cron_manager" class="FOA\CronBundle\Manager\CronManager"/>

        <service id="foa.cli_command_path.validator" class="FOA\CronBundle\Validator\Constraints\CliCommandPathValidator">
            <argument>%kernel.project_dir%</argument>
            <tag name="validator.constraint_validator" alias="foa.cli_command_path.validator" />
        </service>

    </services>

</container>
